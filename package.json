{
	"name": "sushify",
	"version": "0.1.0",
	"description": "Turn your prompt salad into sushi 🥗 → 🍣. Capture, analyze, and refine LLM interactions with zero code changes",
	"type": "module",
	"license": "MIT",
	"author": {
		"name": "Isaac Hagoel",
		"email": "pragmaticfish@gmail.com"
	},
	"homepage": "https://github.com/pragmaticfish/sushify#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pragmaticfish/sushify.git"
	},
	"bugs": {
		"url": "https://github.com/pragmaticfish/sushify/issues"
	},
	"keywords": [
		"llm",
		"prompt-engineering",
		"context-engineering",
		"openai",
		"anthropic",
		"prompt",
		"analysis",
		"debugging",
		"developer-tools",
		"ai",
		"gpt",
		"claude"
	],
	"bin": {
		"sushify": "./build/bin/sushify.js"
	},
	"files": [
		"build/",
		"scripts/",
		"docs/",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": "^20.19 || ^22.12 || >=24"
	},
	"preferGlobal": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"postinstall": "node build/src/lib/cli/setup-proxy.js",
		"prepublishOnly": "npm run build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"install-local": "./scripts/install-local.sh",
		"lint:fix": "eslint . --fix",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:python": "npm run build && cd test-apps/simple-python && ../../build/bin/sushify.js start \"python test-app.py\"",
		"test:docker": "npm run build && cd test-apps/docker-compose && ../../build/bin/sushify.js start --docker=backend \"docker compose up\""
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,md,css,html}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"nanoid": "^5.1.5",
		"openai": "^5.16.0",
		"svelte": "^5.0.0",
		"svelte-exmarkdown": "^5.0.2",
		"svelte-switcher": "^1.0.2",
		"sveltekit-sse": "^0.14.3",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@types/node": "^24.3.0",
		"@vitest/browser": "^3.2.3",
		"esbuild": "^0.25.9",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte-check": "^4.0.0",
		"typescript-eslint": "^8.20.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	}
}
