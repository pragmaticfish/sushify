{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"allowJs": true,
		"outDir": "build",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"sushi-ts-sdk": ["../../sdk/typescript/src/index.ts"]
		},
		"skipLibCheck": true
	},
	"ts-node": {
		"transpileOnly": true,
		"skipIgnore": true,
		"require": ["tsconfig-paths/register"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
